<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <title><%= portfolio.name %> - Portfolio</title>
    <style>
        body {
            margin: 0;
            font-family: 'Poppins', sans-serif;
            background: #fdfdfd;
            color: #333;
        }

        /* Hero Section */
        .hero {
            background: linear-gradient(120deg, #6a11cb, #2575fc);
            color: white;
            text-align: center;
            padding: 60px 20px;
        }
        .hero img {
            width: 130px;
            height: 130px;
            border-radius: 50%;
            border: 4px solid white;
            object-fit: cover;
            margin-bottom: 15px;
        }
        .hero h1 {
            font-size: 2rem;
            margin: 0;
        }
        .hero p {
            margin-top: 8px;
            font-size: 1.1rem;
            opacity: 0.9;
        }

        /* Content Sections */
        .container {
            max-width: 1100px;
            margin: auto;
            padding: 40px 20px;
        }
        section {
            margin-bottom: 50px;
        }
        section h2 {
            font-size: 1.6rem;
            margin-bottom: 15px;
            position: relative;
        }
        section h2::after {
            content: "";
            display: block;
            width: 50px;
            height: 3px;
            background: #2575fc;
            margin-top: 5px;
        }

        /* Skills Tags */
        .skills {
            display: flex;
            flex-wrap: wrap;
            gap: 10px;
        }
        .skill-tag {
            background: #2575fc;
            color: white;
            padding: 8px 12px;
            border-radius: 20px;
            font-size: 0.85rem;
        }

        /* Projects Grid */
        .projects-grid {
            display: grid;
            grid-template-columns: repeat(auto-fill, minmax(260px, 1fr));
            gap: 20px;
        }
        .project-card {
            background: white;
            border-radius: 10px;
            box-shadow: 0 4px 15px rgba(0,0,0,0.05);
            padding: 15px;
            transition: transform 0.2s ease;
        }
        .project-card:hover {
            transform: translateY(-5px);
        }
        .project-card h3 {
            margin: 0;
            font-size: 1.1rem;
            color: #2575fc;
        }
        .project-card p {
            font-size: 0.9rem;
            color: #555;
        }

        /* Lists for Education & Volunteering */
        .list {
            list-style: none;
            padding: 0;
        }
        .list li {
            margin-bottom: 12px;
        }
        .list strong {
            color: #2575fc;
        }

        /* Footer */
        footer {
            background: #2c3e50;
            color: white;
            text-align: center;
            padding: 20px;
            font-size: 0.85rem;
        }
    </style>
</head>
<body>

    <!-- Hero Section -->
    <div class="hero">
        <% if (portfolio.profilePic) { %>
            <img src="<%= portfolio.profilePic %>" alt="<%= portfolio.name %>">
        <% } %>
        <h1><%= portfolio.name || "No Name" %></h1>
        <p><%= portfolio.field || "Your Profession" %></p>
        <p>Email: <%= portfolio.email || "" %> | Phone: <%= portfolio.phone || "" %></p>
        <p>Verified: <%= portfolio.verify ? "✅" : "❌" %></p>
    </div>

    <!-- Main Container -->
    <div class="container">

        <!-- Skills -->
        <section>
            <h2>Skills</h2>
            <div class="skills">
                <% if (portfolio.skills.length) { %>
                    <% portfolio.skills.forEach(skill => { %>
                        <div class="skill-tag"><%= skill.skill %> - <%= skill.proficiency %></div>
                    <% }) %>
                <% } else { %>
                    <p>No skills listed</p>
                <% } %>
            </div>
        </section>

        <!-- Projects -->
        <section>
            <h2>Projects</h2>
            <div class="projects-grid">
                <% if (portfolio.projects.length) { %>
                    <% portfolio.projects.forEach(proj => { %>
                        <div class="project-card">
                            <h3><%= proj.title || "No Title" %></h3>
                            <p><%= proj.description || "" %></p>
                        </div>
                    <% }) %>
                <% } else { %>
                    <p>No projects listed</p>
                <% } %>
            </div>
        </section>

        <!-- Education -->
        <section>
            <h2>Education</h2>
            <% if (portfolio.education.length) { %>
                <ul class="list">
                    <% portfolio.education.forEach(edu => { %>
                        <li>
                            <strong><%= edu.degree || "No Degree" %></strong> - <%= edu.institution || "No Institution" %>
                        </li>
                    <% }) %>
                </ul>
            <% } else { %>
                <p>No education listed</p>
            <% } %>
        </section>

        <!-- Volunteering -->
        <section>
            <h2>Volunteering</h2>
            <% if (portfolio.volunteering.length) { %>
                <ul class="list">
                    <% portfolio.volunteering.forEach(vol => { %>
                        <li>
                            <strong><%= vol.role || "No Role" %></strong> - <%= vol.organization || "No Organization" %>
                        </li>
                    <% }) %>
                </ul>
            <% } else { %>
                <p>No volunteering listed</p>
            <% } %>
        </section>

    </div>

    <!-- Footer -->
    <footer>
        © <%= new Date().getFullYear() %> <%= portfolio.name || "Portfolio Owner" %> — All rights reserved.
    </footer>

</body>
</html>
