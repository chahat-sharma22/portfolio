<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title><%= portfolio.name %> - Creative Portfolio</title>
    <style>
        body {
            margin: 0;
            font-family: 'Inter', sans-serif;
            background: #0f0f0f;
            color: #fff;
        }

        /* Hero Banner */
        .hero {
            background: url('https://images.unsplash.com/photo-1522199710521-72d69614c702?auto=format&fit=crop&w=1600&q=80') no-repeat center/cover;
            height: 100vh;
            display: flex;
            flex-direction: column;
            justify-content: center;
            align-items: center;
            text-align: center;
            padding: 20px;
            color: white;
            position: relative;
        }
        .hero::after {
            content: "";
            position: absolute;
            top: 0; left: 0;
            width: 100%; height: 100%;
            background: rgba(0,0,0,0.6);
        }
        .hero-content {
            position: relative;
            z-index: 2;
        }
        .hero img {
            width: 140px;
            height: 140px;
            border-radius: 50%;
            border: 3px solid #fff;
            object-fit: cover;
            margin-bottom: 15px;
        }
        .hero h1 {
            font-size: 2.5rem;
            margin: 0;
        }
        .hero p {
            font-size: 1.1rem;
            opacity: 0.85;
        }

        /* Section Styles */
        section {
            padding: 60px 20px;
            max-width: 1100px;
            margin: auto;
        }
        section h2 {
            font-size: 2rem;
            margin-bottom: 25px;
            border-left: 5px solid #ff6b00;
            padding-left: 10px;
        }

        /* Skills Badges */
        .skills {
            display: flex;
            flex-wrap: wrap;
            gap: 12px;
        }
        .skill {
            background: #1f1f1f;
            border: 1px solid #333;
            padding: 10px 15px;
            border-radius: 5px;
            font-size: 0.9rem;
        }

        /* Project Showcase */
        .projects {
            display: grid;
            grid-template-columns: repeat(auto-fill, minmax(280px, 1fr));
            gap: 20px;
        }
        .project {
            background: #1c1c1c;
            border-radius: 10px;
            overflow: hidden;
            transition: transform 0.3s ease;
        }
        .project:hover {
            transform: translateY(-5px);
        }
        .project img {
            width: 100%;
            height: 180px;
            object-fit: cover;
        }
        .project-content {
            padding: 15px;
        }
        .project-content h3 {
            margin: 0 0 10px;
            color: #ff6b00;
        }
        .project-content p {
            font-size: 0.85rem;
            color: #bbb;
        }

        /* Lists */
        .list {
            list-style: none;
            padding: 0;
        }
        .list li {
            margin-bottom: 10px;
            font-size: 0.95rem;
        }
        .list strong {
            color: #ff6b00;
        }

        /* Footer */
        footer {
            background: #000;
            text-align: center;
            padding: 20px;
            font-size: 0.8rem;
            color: #888;
        }
    </style>
</head>
<body>

    <!-- Hero Section -->
    <div class="hero">
        <div class="hero-content">
            <% if (portfolio.profilePic) { %>
                <img src="<%= portfolio.profilePic %>" alt="<%= portfolio.name %>">
            <% } %>
            <h1><%= portfolio.name || "No Name" %></h1>
            <p><%= portfolio.field || "Your Profession" %></p>
            <p><%= portfolio.email || "" %> | <%= portfolio.phone || "" %></p>
            <p>Verified: <%= portfolio.verify ? "✅" : "❌" %></p>
        </div>
    </div>

    <!-- Skills -->
    <section>
        <h2>Skills</h2>
        <div class="skills">
            <% if (portfolio.skills.length) { %>
                <% portfolio.skills.forEach(skill => { %>
                    <div class="skill"><%= skill.skill %> — <%= skill.proficiency %></div>
                <% }) %>
            <% } else { %>
                <p>No skills listed</p>
            <% } %>
        </div>
    </section>

    <!-- Projects -->
    <section>
        <h2>Projects</h2>
        <div class="projects">
            <% if (portfolio.projects.length) { %>
                <% portfolio.projects.forEach(proj => { %>
                    <div class="project">
                        <% if (proj.image) { %>
                            <img src="<%= proj.image %>" alt="<%= proj.title %>">
                        <% } else { %>
                            <img src="https://via.placeholder.com/300x180" alt="Placeholder">
                        <% } %>
                        <div class="project-content">
                            <h3><%= proj.title || "Untitled Project" %></h3>
                            <p><%= proj.description || "" %></p>
                        </div>
                    </div>
                <% }) %>
            <% } else { %>
                <p>No projects listed</p>
            <% } %>
        </div>
    </section>

    <!-- Education -->
    <section>
        <h2>Education</h2>
        <% if (portfolio.education.length) { %>
            <ul class="list">
                <% portfolio.education.forEach(edu => { %>
                    <li><strong><%= edu.degree || "No Degree" %></strong> — <%= edu.institution || "No Institution" %></li>
                <% }) %>
            </ul>
        <% } else { %>
            <p>No education listed</p>
        <% } %>
    </section>

    <!-- Volunteering -->
    <section>
        <h2>Volunteering</h2>
        <% if (portfolio.volunteering.length) { %>
            <ul class="list">
                <% portfolio.volunteering.forEach(vol => { %>
                    <li><strong><%= vol.role || "No Role" %></strong> — <%= vol.organization || "No Organization" %></li>
                <% }) %>
            </ul>
        <% } else { %>
            <p>No volunteering listed</p>
        <% } %>
    </section>

    <!-- Footer -->
    <footer>
        © <%= new Date().getFullYear() %> <%= portfolio.name || "Portfolio Owner" %> — Built with ❤️
    </footer>

</body>
</html>
