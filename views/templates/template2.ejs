<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <title><%= portfolio.name %> - Portfolio</title>
    <style>
        body {
            font-family: 'Segoe UI', sans-serif;
            background-color: #f7f8fa;
            margin: 0;
            padding: 0;
            color: #333;
        }
        header {
            background-color: #2c3e50;
            color: white;
            padding: 30px 20px;
            text-align: center;
        }
        header img {
            border-radius: 50%;
            width: 120px;
            height: 120px;
            object-fit: cover;
            border: 4px solid white;
            margin-bottom: 10px;
        }
        header h1 {
            margin: 5px 0;
        }
        header p {
            margin: 3px 0;
            font-size: 0.95rem;
        }
        main {
            max-width: 900px;
            margin: auto;
            padding: 20px;
        }
        section {
            background: white;
            padding: 20px;
            border-radius: 10px;
            margin-bottom: 20px;
            box-shadow: 0 2px 6px rgba(0,0,0,0.05);
        }
        h2 {
            color: #2c3e50;
            border-bottom: 2px solid #ecf0f1;
            padding-bottom: 8px;
            margin-bottom: 15px;
        }
        ul {
            list-style: none;
            padding: 0;
        }
        ul li {
            margin-bottom: 8px;
            padding: 8px;
            background: #f0f3f6;
            border-radius: 5px;
        }
        .no-data {
            color: #888;
            font-style: italic;
        }
    </style>
</head>
<body>

<header>
    <% if (portfolio.profilePic) { %>
        <img src="<%= portfolio.profilePic %>" alt="<%= portfolio.name %>">
    <% } %>
    <h1><%= portfolio.name || "No Name" %></h1>
    <p><%= portfolio.field || "" %></p>
    <p><%= portfolio.email || "" %> | <%= portfolio.phone || "" %></p>
    <p><%= portfolio.address || "" %></p>
    <p>Verified: <%= portfolio.verify ? "✅ Yes" : "❌ No" %></p>
</header>

<main>

    <!-- Skills -->
    <section>
        <h2>Skills</h2>
        <% if (portfolio.skills.length) { %>
            <ul>
                <% portfolio.skills.forEach(skill => { %>
                    <li><strong><%= skill.skill %></strong> — <%= skill.proficiency %></li>
                <% }) %>
            </ul>
        <% } else { %>
            <div class="no-data">No skills listed</div>
        <% } %>
    </section>

    <!-- Education -->
    <section>
        <h2>Education</h2>
        <% if (portfolio.education.length) { %>
            <ul>
                <% portfolio.education.forEach(edu => { %>
                    <li>
                        <strong><%= edu.degree %></strong> — <%= edu.institution %> (<%= edu.year %>)
                    </li>
                <% }) %>
            </ul>
        <% } else { %>
            <div class="no-data">No education listed</div>
        <% } %>
    </section>

    <!-- Projects -->
    <section>
        <h2>Projects</h2>
        <% if (portfolio.projects.length) { %>
            <ul>
                <% portfolio.projects.forEach(project => { %>
                    <li>
                        <strong><%= project.title %></strong>
                        <% if (project.description) { %><br><%= project.description %><% } %>
                    </li>
                <% }) %>
            </ul>
        <% } else { %>
            <div class="no-data">No projects listed</div>
        <% } %>
    </section>

    <!-- Experiences -->
    <section>
        <h2>Experience</h2>
        <% if (portfolio.experiences.length) { %>
            <ul>
                <% portfolio.experiences.forEach(exp => { %>
                    <li>
                        <strong><%= exp.role || "No role" %></strong> — <%= exp.organization || "No organization" %>
                        <% if (exp.description) { %>
                            <div style="color:#666; font-size:0.9rem;"><%= exp.description %></div>
                        <% } %>
                    </li>
                <% }) %>
            </ul>
        <% } else { %>
            <div class="no-data">No experience listed</div>
        <% } %>
    </section>

    <!-- Volunteering -->
    <section>
        <h2>Volunteering</h2>
        <% if (portfolio.volunteering.length) { %>
            <ul>
                <% portfolio.volunteering.forEach(vol => { %>
                    <li>
                        <strong><%= vol.role || "No role" %></strong> — <%= vol.organization || "No organization" %>
                        <% if (vol.description) { %>
                            <div style="color:#666; font-size:0.9rem;"><%= vol.description %></div>
                        <% } %>
                    </li>
                <% }) %>
            </ul>
        <% } else { %>
            <div class="no-data">No volunteering listed</div>
        <% } %>
    </section>

</main>

</body>
</html>
