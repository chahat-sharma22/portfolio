<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title><%= portfolio.name %> - Portfolio</title>
    <style>
        body {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            margin: 0;
            background: #f5f6fa;
            color: #333;
        }
        .container {
            max-width: 950px;
            margin: 40px auto;
            background: white;
            border-radius: 12px;
            padding: 30px;
            box-shadow: 0 8px 20px rgba(0,0,0,0.08);
        }
        .header {
            display: flex;
            align-items: center;
            border-bottom: 2px solid #eee;
            padding-bottom: 20px;
            margin-bottom: 20px;
        }
        .profile-pic {
            width: 130px;
            height: 130px;
            border-radius: 50%;
            object-fit: cover;
            border: 4px solid #4a90e2;
            margin-right: 25px;
        }
        h1 {
            margin: 0;
            font-size: 2.2rem;
            color: #4a90e2;
        }
        .subtitle {
            font-size: 1.1rem;
            color: #666;
        }
        .contact {
            margin-top: 10px;
            font-size: 0.95rem;
            color: #555;
        }
        section {
            margin-top: 25px;
        }
        section h3 {
            border-left: 5px solid #4a90e2;
            padding-left: 10px;
            font-size: 1.3rem;
            margin-bottom: 10px;
            color: #4a90e2;
        }
        ul {
            list-style: none;
            padding: 0;
            margin: 0;
        }
        ul li {
            background: #f0f4ff;
            display: inline-block;
            padding: 8px 14px;
            margin: 5px;
            border-radius: 20px;
            font-size: 0.9rem;
            color: #4a90e2;
        }
        .no-data {
            font-style: italic;
            color: #888;
        }
        .badge {
            background: #27ae60;
            color: white;
            padding: 5px 10px;
            border-radius: 8px;
            font-size: 0.85rem;
            margin-left: 10px;
        }
        .badge.not-verified {
            background: #e74c3c;
        }
        .list-section li {
            background: none;
            color: #333;
            display: block;
            margin-bottom: 8px;
            border-bottom: 1px solid #eee;
            padding-bottom: 5px;
        }
    </style>
</head>
<body>
    <div class="container">
        <!-- Header -->
        <div class="header">
            <% if (portfolio.profilePic) { %>
                <img src="<%= portfolio.profilePic %>" alt="Profile Picture" class="profile-pic">
            <% } else { %>
                <div class="profile-pic" style="background:#ddd; display:flex; align-items:center; justify-content:center; font-size:40px; color:#999;">
                    ?
                </div>
            <% } %>
            <div>
                <h1>
                    <%= portfolio.name || "No Name" %>
                    <% if (portfolio.verify) { %>
                        <span class="badge">Verified</span>
                    <% } else { %>
                        <span class="badge not-verified">Not Verified</span>
                    <% } %>
                </h1>
                <div class="subtitle"><%= portfolio.field || "No field info" %></div>
                <div class="contact">
                    üìß <%= portfolio.email || "No email" %> <br>
                    üìû <%= portfolio.phone || "No phone" %> <br>
                    üìç <%= portfolio.address || "No address" %>
                </div>
            </div>
        </div>

        <!-- Skills -->
        <!-- Skills -->
<section>
    <h3>Skills</h3>
    <% if (portfolio.skills.length) { %>
        <ul>
            <% portfolio.skills.forEach(skill => { %>
                <li>
                    <strong><%= skill.skill || "Unnamed skill" %></strong>
                    <% if (skill.proficiency) { %> 
                        ‚Äî <%= skill.proficiency %>
                    <% } %>
                </li>
            <% }) %>
        </ul>
    <% } else { %>
        <div class="no-data">No skills listed</div>
    <% } %>
</section>


        <!-- Education -->
        <section>
            <h3>Education</h3>
            <% if (portfolio.education.length) { %>
                <ul class="list-section">
                    <% portfolio.education.forEach(edu => { %>
                        <li>
                            <strong><%= edu.degree || "No degree" %></strong> ‚Äî <%= edu.institution || "No institution" %>  
                            <div style="color:#666; font-size:0.9rem;"><%= edu.year || "" %></div>
                        </li>
                    <% }) %>
                </ul>
            <% } else { %>
                <div class="no-data">No education listed</div>
            <% } %>
        </section>

        <!-- Projects -->
        <section>
            <h3>Projects</h3>
            <% if (portfolio.projects.length) { %>
                <ul class="list-section">
                    <% portfolio.projects.forEach(proj => { %>
                        <li>
                            <strong><%= proj.title || "No title" %></strong>
                            <div style="color:#666; font-size:0.9rem;"><%= proj.description || "" %></div>
                        </li>
                    <% }) %>
                </ul>
            <% } else { %>
                <div class="no-data">No projects listed</div>
            <% } %>
        </section>

        <!-- Volunteering -->
        <section>
            <h3>Volunteering</h3>
            <% if (portfolio.volunteering.length) { %>
                <ul class="list-section">
                    <% portfolio.volunteering.forEach(vol => { %>
                        <li>
                            <strong><%= vol.role || "No role" %></strong> ‚Äî <%= vol.organization || "No organization" %>
                            <div style="color:#666; font-size:0.9rem;"><%= vol.description || "" %></div>
                        </li>
                    <% }) %>
                </ul>
            <% } else { %>
                <div class="no-data">No volunteering listed</div>
            <% } %>
        </section>
       <section>
    <h3>Experience</h3>
    <% if (portfolio.experiences.length) { %>
        <ul class="list-section">
            <% portfolio.experiences.forEach(exp => { %>
                <li>
                    <strong><%= exp.role || "No role" %></strong> ‚Äî <%= exp.organization || "No organization" %>
                    <div style="color:#666; font-size:0.9rem;"><%= exp.description || "" %></div>
                </li>
            <% }) %>
        </ul>
    <% } else { %>
        <div class="no-data">No experiences listed</div>
    <% } %>
</section>
    </div>
</body>
</html>
