<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Portfolio Editor</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
    <link rel="stylesheet" href="/css/editor.css">
</head>
<body>
    <div class="container-fluid">
        <div class="row">
            <!-- Template Selection Sidebar -->
            <div class="col-md-3 sidebar">
                <h2 class="mb-4">Select Template</h2>
                <div class="template-thumbnails mb-4">
                    <div class="template-thumbnail active" data-template="template1">
                        <img src="/images/template1-thumb.jpg" alt="Modern Minimalist" class="img-fluid">
                        <p>Modern Minimalist</p>
                    </div>
                    <div class="template-thumbnail" data-template="template2">
                        <img src="/images/template2-thumb.jpg" alt="Creative Professional" class="img-fluid">
                        <p>Creative Professional</p>
                    </div>
                    <div class="template-thumbnail" data-template="template3">
                        <img src="/images/template3-thumb.jpg" alt="Corporate" class="img-fluid">
                        <p>Corporate</p>
                    </div>
                    <div class="template-thumbnail" data-template="template4">
                        <img src="/images/template4-thumb.jpg" alt="Academic" class="img-fluid">
                        <p>Academic</p>
                    </div>
                </div>

                <h2 class="mb-3">Editor Controls</h2>
                
                <!-- Basic Information -->
                <div class="control-section">
                    <h3>Basic Information</h3>
                    <div class="mb-3">
                        <label class="form-label">Full Name*</label>
                        <input type="text" class="form-control" id="name" required>
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Professional Title*</label>
                        <input type="text" class="form-control" id="title" required>
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Email*</label>
                        <input type="email" class="form-control" id="email" required>
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Phone</label>
                        <input type="tel" class="form-control" id="phone">
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Location</label>
                        <input type="text" class="form-control" id="location">
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Website</label>
                        <input type="url" class="form-control" id="website">
                    </div>
                </div>

                <!-- About Section -->
                <div class="control-section">
                    <h3>About Me</h3>
                    <textarea class="form-control" id="aboutText" rows="5" placeholder="Write something about yourself..."></textarea>
                </div>

                <!-- Experience Section -->
                <div class="control-section">
                    <h3>Work Experience</h3>
                    <div id="experienceList" class="mb-3"></div>
                    
                    <div class="experience-form">
                        <div class="mb-3">
                            <label class="form-label">Position*</label>
                            <input type="text" class="form-control" id="expPosition" required>
                        </div>
                        <div class="mb-3">
                            <label class="form-label">Company*</label>
                            <input type="text" class="form-control" id="expCompany" required>
                        </div>
                        <div class="row mb-3">
                            <div class="col-md-6">
                                <label class="form-label">Start Date*</label>
                                <input type="text" class="form-control" id="expStartDate" placeholder="YYYY or MM/YYYY" required>
                            </div>
                            <div class="col-md-6">
                                <label class="form-label">End Date</label>
                                <input type="text" class="form-control" id="expEndDate" placeholder="YYYY or MM/YYYY or Present">
                            </div>
                        </div>
                        <div class="mb-3">
                            <label class="form-label">Description</label>
                            <textarea class="form-control" id="expDescription" rows="3"></textarea>
                        </div>
                        <div class="d-flex gap-2">
                            <button class="btn btn-primary" id="addExperience">Add Experience</button>
                            <button class="btn btn-outline-secondary" id="clearExperience">Clear</button>
                        </div>
                    </div>
                </div>

                <!-- Education Section -->
                <div class="control-section">
                    <h3>Education</h3>
                    <div id="educationList" class="mb-3"></div>
                    
                    <div class="education-form">
                        <div class="mb-3">
                            <label class="form-label">Degree*</label>
                            <input type="text" class="form-control" id="eduDegree" required>
                        </div>
                        <div class="mb-3">
                            <label class="form-label">Institution*</label>
                            <input type="text" class="form-control" id="eduInstitution" required>
                        </div>
                        <div class="row mb-3">
                            <div class="col-md-6">
                                <label class="form-label">Start Date*</label>
                                <input type="text" class="form-control" id="eduStartDate" placeholder="YYYY or MM/YYYY" required>
                            </div>
                            <div class="col-md-6">
                                <label class="form-label">End Date</label>
                                <input type="text" class="form-control" id="eduEndDate" placeholder="YYYY or MM/YYYY">
                            </div>
                        </div>
                        <div class="d-flex gap-2">
                            <button class="btn btn-primary" id="addEducation">Add Education</button>
                            <button class="btn btn-outline-secondary" id="clearEducation">Clear</button>
                        </div>
                    </div>
                </div>

                <!-- Skills Section -->
                <div class="control-section">
                    <h3>Skills</h3>
                    <div id="skillsList" class="mb-3"></div>
                    
                    <div class="skills-form d-flex gap-2">
                        <input type="text" class="form-control" id="newSkill" placeholder="Add a new skill">
                        <button class="btn btn-primary" id="addSkill">Add</button>
                    </div>
                </div>

                <!-- Style Customization -->
                <div class="control-section">
                    <h3>Style Customization</h3>
                    <div class="mb-3">
                        <label class="form-label">Font Family</label>
                        <select class="form-select" id="fontFamily">
                            <option value="Arial">Arial</option>
                            <option value="Helvetica">Helvetica</option>
                            <option value="Georgia">Georgia</option>
                            <option value="Times New Roman">Times New Roman</option>
                            <option value="Courier New">Courier New</option>
                            <option value="Verdana">Verdana</option>
                            <option value="Roboto">Roboto</option>
                            <option value="Open Sans">Open Sans</option>
                            <option value="Montserrat">Montserrat</option>
                        </select>
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Font Size</label>
                        <input type="range" class="form-range" id="fontSize" min="12" max="24" value="16">
                        <span id="fontSizeValue">16px</span>
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Text Color</label>
                        <input type="color" class="form-control form-control-color" id="textColor" value="#333333">
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Background Color</label>
                        <input type="color" class="form-control form-control-color" id="backgroundColor" value="#ffffff">
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Heading Color</label>
                        <input type="color" class="form-control form-control-color" id="headingColor" value="#222222">
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Accent Color</label>
                        <input type="color" class="form-control form-control-color" id="accentColor" value="#007bff">
                    </div>
                </div>

                <!-- Download Buttons -->
                <div class="d-grid gap-2 mt-4">
                    <button class="btn btn-primary btn-download" id="downloadPdf">
                        <i class="fas fa-download"></i> Download as PDF
                    </button>
                    <button class="btn btn-secondary btn-download" id="downloadHtml">
                        <i class="fas fa-code"></i> Download as HTML
                    </button>
                </div>
            </div>

            <!-- Preview Pane -->
            <div class="col-md-9 preview-pane">
                <div class="preview-toolbar">
                    <h3>Live Preview</h3>
                    <div class="btn-group">
                        <button class="btn btn-sm btn-outline-secondary" id="refreshPreview">
                            <i class="fas fa-sync-alt"></i> Refresh
                        </button>
                    </div>
                </div>
                <iframe id="portfolioPreview" src="/preview/template1"></iframe>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="/js/editor.js"></script>
</body>
</html>